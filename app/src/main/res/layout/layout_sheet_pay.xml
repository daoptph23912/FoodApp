<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@color/tran_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingBottom="30dp"
        android:background="#fff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:text="Chi Tiết Đơn Hàng"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_tong_tien_tat_ca"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ten"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/tv_so_luong"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Phương Thức Thanh Toán"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="Tiền Mặt"
                android:clickable="false"
                android:id="@+id/edt_phuong_thuc"
                android:layout_width="match_parent"
                android:background="@drawable/cs_edittext"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Họ Và Tên (*)"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:id="@+id/edt_ten"
                android:layout_width="match_parent"
                android:background="@drawable/cs_edittext"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="Số Điện Thoại"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:id="@+id/edt_sdt"
                android:layout_width="match_parent"
                android:background="@drawable/cs_edittext"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="Địa Chỉ Giao Hàng"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:id="@+id/edt_dia_chi"
                android:background="@drawable/cs_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:paddingTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="Hủy Bỏ"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/tv_huy_bo_sheet"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:background="@drawable/cs_huy_bo"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Đặt Hàng"
                    android:id="@+id/tv_dat_hang_sheet"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/cs_them_gio_hang"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>