<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@color/tran_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="150dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_food_detail"
                        android:layout_width="170dp"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_title_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16sp"
                    android:layout_marginStart="2dp"
                    android:textColor="#FF6347"
                    android:textStyle="bold"
                    android:id="@+id/tv_price_food"
                    android:padding="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_minus"
                        android:id="@+id/img_minus"
                        android:layout_width="36dp"
                        android:background="@drawable/cs_bg_add_minus"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="36dp"
                        android:text="1"
                        android:id="@+id/tv_amount"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/cs_amount"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_marginStart="20dp"
                        android:layout_width="36dp"
                        android:src="@drawable/ic_add"
                        android:background="@drawable/cs_bg_add_minus"
                        android:layout_height="30dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Hủy Bỏ"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_huy_bo"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cs_huy_bo"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Thêm Vào Giỏ Hàng"
                android:layout_marginEnd="10dp"
                android:id="@+id/tv_them_vao_gio_hang_sheet"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/cs_them_gio_hang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>