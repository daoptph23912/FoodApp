<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/xam2"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:padding="8dp"
                android:text="Mã Đơn Hàng"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_ma_don_hang"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="Họ Tên"
                android:textColor="@color/xam2"

                android:layout_weight="2.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_ten"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Số Điện Thoại"
                android:layout_width="0dp"
                android:textColor="@color/xam2"

                android:layout_weight="2.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tv_sdt"
                android:layout_weight="3.5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Địa Chỉ Nhận"
                android:layout_width="0dp"
                android:textColor="@color/xam2"

                android:layout_weight="2.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/tv_dia_chi"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Thực Đơn"
                android:textColor="@color/xam2"

                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_thuc_don"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Số Lượng"
                android:textColor="@color/xam2"

                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_so_luong"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ngày Đặt Hàng"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:textColor="@color/xam2"

                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/tv_ngay_dat_hang"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tổng Tiền"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:padding="8dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/tv_tong_tien"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Thanh Toán"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:textColor="@color/xam2"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tv_thanh_toan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="3.5"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>